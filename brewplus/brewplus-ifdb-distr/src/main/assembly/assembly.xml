<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>distr</id>
	<formats>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>net.ilforumdellabirra:brewplus-ifdb</include>
			</includes>
			<outputFileNameMapping>BrewPlus-IFDB.jar</outputFileNameMapping>

		</dependencySet>

	</dependencySets>



	<fileSets>


		<fileSet>
			<outputDirectory>/</outputDirectory>
			<directory>src/main/resources/distr</directory>
			<includes>
				<include>**</include>
				<include>*.*</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<outputDirectory>lib</outputDirectory>
			<directory>../brewplus-ifdb/target/lib</directory>
			<includes>
				<include>**</include>
				<include>*.*</include>
			</includes>
		</fileSet>





	</fileSets>





</assembly>